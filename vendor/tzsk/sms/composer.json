{
    "name": "tzsk/sms",
    "type": "library",
    "description": "Laravel SMS Gateway Integration Package",
    "keywords": [
        "tzsk",
        "sms",
        "laravel sms gateway",
        "laravel textlocal",
        "laravel twilio",
        "laravel link mobility",
        "laravel kavenegar",
        "laravel melipayamak",
        "laravel smsir",
        "laravel tsms",
        "laravel farazsms",
        "laravel SMS gateway me"
    ],
    "homepage": "https://github.com/tzsk/sms",
    "license": "MIT",
    "authors": [
        {
            "name": "Kazi Mainuddin Ahmed",
            "email": "mailtokmahmed@gmail.com",
            "homepage": "https://github.com/tzsk",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
          "type": "git",
          "url": "https://github.com/smsgatewayme/client-php.git"
        }
    ],
    "require": {
        "illuminate/support": "~5.7|~5.8|^6.0|^7.0",
        "php": "^7.2",
        "guzzlehttp/guzzle": "~6.2"
    },
    "require-dev": {
        "aws/aws-sdk-php": "^3.87",
        "kavenegar/php": "^1.2",
        "mediaburst/clockworksms": "^2.0",
        "melipayamak/php": "^0.1.0 || ^1.0.0",
        "nexmo/client": "^1.6 || ^2.0",
        "orchestra/testbench": "~3.7|~3.8|^4.0|^5.0",
        "phpunit/phpunit": "^8.0|^9.0",
        "smsgatewayme/client": "^0.0.1",
        "squizlabs/php_codesniffer": "^2.3 || ^3.0",
        "twilio/sdk": "^5.27 || ^6.0"
    },
    "autoload": {
        "psr-4": {
            "Tzsk\\Sms\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tzsk\\Sms\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Tzsk\\Sms\\Provider\\SmsServiceProvider"
            ],
            "aliases": {
                "Sms": "Tzsk\\Sms\\Facade\\Sms"
            }
        }
    },
    "config": {
        "sort-packages": true
    }
}
